<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="DialpadKeyLettersStyle">
        <item name="android:textSize">@dimen/dialpad_key_letters_size</item>
        <item name="android:textColor">@color/dialpad_secondary_text_color</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="DialpadKeyNumberStyle">
        <item name="android:textSize">@dimen/dialpad_key_numbers_size</item>
        <item name="android:textColor">@color/dialpad_primary_text_color</item>
        <item name="android:layout_width">@dimen/dialpad_key_number_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/dialpad_key_number_margin_bottom</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="SecVideoCallModifyButtonWithText">
        <item name="android:textSize">@dimen/sec_video_incall_button_text_size</item>
        <item name="android:textColor">@drawable/sec_modify_button_text_color</item>
        <item name="android:background">@drawable/sec_incall_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sec-roboto-light</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="SecVideoCallOneWayModifyButtonWithText">
        <item name="android:textSize">@dimen/sec_video_incall_button_text_size</item>
        <item name="android:textColor">@drawable/sec_modify_button_text_color</item>
        <item name="android:background">@drawable/sec_incall_button_background</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sec-roboto-light</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="SecVideoCallQcifButton">
        <item name="android:textSize">@dimen/sec_video_call_button_text_size</item>
        <item name="android:textColor">@color/sec_video_call_button_text_color</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/sec_videocall_button_background</item>
        <item name="android:paddingTop">@dimen/sec_video_qcif_incall_button_padding_top</item>
        <item name="android:layout_width">0.0dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:scaleType">center</item>
        <item name="android:shadowColor">@color/sec_video_qcif_videocall_button_text_shadow</item>
        <item name="android:shadowRadius">2.0</item>
        <item name="android:drawablePadding">@dimen/sec_video_incall_button_drawable_padding</item>
        <item name="android:layout_weight">@integer/vga_button_width_weight</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sec-roboto-condensed</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
